@model BusLocator.Web.Models.DriverViewModel

@{
    ViewBag.Title = "AddDriver";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            New Driver
        </h1>
        <ol class="breadcrumb hide-on-print">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="#">Admin</a>
            </li>
            <li class="active">
                <i class="fa fa-bar-chart-o"></i> Add Driver
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add New Driver
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("AddDriver", "Admin", FormMethod.Post, new { role = "form" }))
                        {
                            <div class="form-group">
                                <label>Full Name</label>
                                @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control", @placeholder = "Full name" })
                                @Html.ValidationMessageFor(m => m.Fullname, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Employee Id</label>
                                @Html.TextBoxFor(m => m.EmployeeId, new { @class = "form-control", @placeholder = "Employee Id" })
                                @Html.ValidationMessageFor(m => m.EmployeeId, null, new { @class = "text-danger" })                        
                            </div>
                            <div class="form-group">
                                <label>E-mail</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Driver Email" })
                                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Static Control</label>
                                <p class="form-control-static">email@example.com</p>
                            </div>

                            <button type="submit" class="btn btn-success">Add Driver</button>
                        }
                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>
