@model BusLocator.Web.Models.BusViewModel

@{
    ViewBag.Title = "AddBus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            New Bus
        </h1>
        <ol class="breadcrumb hide-on-print">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="#">Admin</a>
            </li>
            <li class="active">
                <i class="fa fa-bar-chart-o"></i> Add Bus
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add New Bus
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("AddBus", "Admin", FormMethod.Post, new { role = "form" }))
                        {
                            <div class="form-group">
                                <label>Bus ID</label>
                                @Html.TextBoxFor(m => m.BusId, new { @class = "form-control", @placeholder = "Driver Email" })
                                @Html.ValidationMessageFor(m => m.BusId, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                Does this bus have Accessibility features?
                                &nbsp;
                                @Html.CheckBoxFor(m => m.HasAccessibility) 
                            </div>

                            <button type="submit" class="btn btn-success">Add Bus</button>
                        }
                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>
