@model IEnumerable<BusLocator.Web.Models.BusViewModel>

@{
    ViewBag.Title = "Buses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Log Charts
        </h1>
        <ol class="breadcrumb hide-on-print">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="#">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-bar-chart-o"></i> Buses
            </li>
        </ol>
    </div>
</div>
<div class="row">

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Striped Rows
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Bus Id</th>
                                <th>Has Accessibility <i class="fa fa-wheelchair"></i></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model)
                            {
                                int i = 1;
                                <tr>
                                    <td>1</td>
                                    <td>@m.BusId</td>
                                    <td>@m.HasAccessibility</td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>

