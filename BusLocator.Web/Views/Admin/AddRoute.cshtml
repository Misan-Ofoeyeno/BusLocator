@model BusLocator.Web.Models.RouteViewModel

@{
    ViewBag.Title = "AddRoute";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            New Route
        </h1>
        <ol class="breadcrumb hide-on-print">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="#">Admin</a>
            </li>
            <li class="active">
                <i class="fa fa-bar-chart-o"></i> Add Route
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add New Route
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("AddRoute", "Admin", FormMethod.Post, new { role = "form" }))
                        {
                            <div class="form-group">
                                <label>Static Control</label>
                                <p class="form-control-static">new route</p>
                            </div>
                            <div class="form-group">
                                <label>Route Name</label>
                                @Html.TextBoxFor(m => m.RouteName, new { @class = "form-control", @placeholder = "Route Name" })
                                @Html.ValidationMessageFor(m => m.RouteName, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Route Short Name</label>
                                @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control", @placeholder = "Route Short Name" })
                                @Html.ValidationMessageFor(m => m.ShortName, null, new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-success">Add Route</button>
                        }
                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>
